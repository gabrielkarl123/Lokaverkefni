Test
#!/bin/bash

if [ $EUID -ne 0 ]; then 
	echo "Þú verður að keyra skipunina með sudo"
	exit 1
fi

echo -n "Hvað heitir hópurinn? "
read hopur
groupadd $hopur 2> /dev/null

while [ $? -ne 0 ]; do
	echo "nafn hópsins er núþegar í notkun vinsamlegast veldu annan nafn: "
	read hopur
	groupadd $hopur 2> /dev/null
done

echo -n "Hvað heitir notandinn? "
read notandi
useradd -g $hopur -s /bin/bash $notandi 2> /dev/null

while [ $? -ne 0 ]; do
	echo "nafn notandans er núþegar í notkun vinsamlegast veldu annan nafn: "
	read notandi
	useradd -g $hopur -s /bin/bash $notandi 2> /dev/null
done

# echo -n "vinsamlegast skrifaðu inn leynikóðann sem þú vilt nota" 
# read pass
passwd $notandi

echo -n "Vinsamlegast veldu nafn fyrir möppuna þína: "
read mappa
mkdir /home/$mappa 2> /dev/null

while [ $? -ne 0 ]; do
	echo "nafn möppunar er núþegar í notkun vinsamlegast veldu annan nafn: "
	read mappa
	mkdir /home/$mappa 2> /dev/null
done

chown $notandi:$hopur /home/$mappa
# chown $notandi:$hopur
chmod 1744 /home/$mappa
# chmod 1744 $hopur
usermod -d /home/$mappa $notandi
